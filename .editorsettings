# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings (applies to all files unless overridden below)
[*]
charset = utf-8                  # Use UTF-8 encoding
indent_style = space             # Use spaces instead of tabs
indent_size = 4                  # Indentation size of 4 spaces
end_of_line = lf                 # Use LF (Unix-style) line endings
trim_trailing_whitespace = true  # Remove trailing whitespace
insert_final_newline = true      # Ensure files end with a newline

# Specific overrides for Markdown files
[*.md]
trim_trailing_whitespace = false # Allow trailing whitespace in Markdown (common for formatting)

# Specific overrides for JSON files
[*.json]
indent_style = space
indent_size = 4                  # JSON files use 4-space indentation

# Specific overrides for YAML files
[*.yml, *.yaml]
indent_style = space
indent_size = 4                  # YAML files use 4-space indentation

# Specific overrides for TypeScript files
[*.ts]
indent_style = space
indent_size = 4                  # Use 4-space indentation for TypeScript

# Overrides for JavaScript files
[*.js]
indent_style = space
indent_size = 4                  # Use 4-space indentation for JavaScript

# Overrides for CSS/SCSS files
[*.css, *.scss]
indent_style = space
indent_size = 4                  # Use 4-space indentation for stylesheets
